<li class="list-group-item" id="cuestionario_{{cuestionario.id}}">
  <div class="row">
    <div class="col-md-8"><h3>{{cuestionario.titulo}}</h3>
      <p>{{cuestionario.instrucciones}}</p>
    </div>
    <div class="col-md-4"><div  class="btn-group pull-right">
    <div id="call-{{cuestionario.id}}" class="btn btn-info" onclick="callForm('call-{{cuestionario.id}}');" data-cuestionario="{{json cuestionario}}" data-preguntas="{{json preguntas}}">Ingresar</div>
    <div class="btn btn-danger" onclick="deleteFORM('{{cuestionario.id}}')">Eliminar</div></div></div>
  </div>
<script type="text/javascript">
  function callForm(id){
    var cuestionario = $('#'+id).data('cuestionario');
    var preguntas = $('#'+id).data('preguntas');
    var content = {'cuestionario': cuestionario, 'preguntas': preguntas};
    content = JSON.stringify(content);
    loadDBTPLparser(content, 'formulario', 'tpl');
  
  }
</script>
</li>


<script type="text/javascript">
function deleteFORM(id) {
  deleteRegisterQuery('formularios',id, function(callback){
    if(callback != null){
        $('#cuestionario_'+id).remove();  
    }else{
      alert('El formulario no pudo ser eliminado');
    }
  });
}
</script>